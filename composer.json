{
    "name": "staffnowa/address-parser",
    "description": "A PHP library splits a full address into country, city, street, and postcode.",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "stable",
    "require": {
        "php": "^8.0",
        "symfony/intl": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "*",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": { "StaffNowa\\AddressParser\\": "src/" }
    },
    "scripts": {
        "test": [
            "@php vendor/bin/phpunit"
        ],
        "phpstan": [
            "@php vendor/bin/phpstan analyse"
        ],
        "coverage-report": [
            "@php vendor/bin/phpunit --coverage-html reports"
        ]
    }
}
